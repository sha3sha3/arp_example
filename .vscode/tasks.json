{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "delete old binary",
            "command": "echo \"Deleting ${fileDirname}/${fileBasenameNoExtension}\" &  rm ${fileDirname}/${fileBasenameNoExtension} || :"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I${fileDirname}/include"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/gcc",
            "dependsOn": ["delete old binary"]
        }
    ]
}